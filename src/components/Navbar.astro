---
import { otherLang } from "../lib/i18n";
const { lang, labels } = Astro.props as { lang:'es'|'en', labels: any };
const alt = otherLang(lang);
---
<nav class="mx-auto max-w-6xl px-4 md:px-8 h-16 flex items-center justify-between border-b border-cyan-400/20">
  <a class="font-mono text-xl font-bold text-cyan-400 hover:text-cyan-300 transition-colors" href={`/${lang}`}>
    eduardo@dev
  </a>
  <ul class="hidden md:flex gap-8 text-sm font-mono">
    <li><a class="text-slate-300 hover:text-cyan-400 transition-colors" href={`/${lang}#about`}>{labels.about}</a></li>
    <li><a class="text-slate-300 hover:text-cyan-400 transition-colors" href={`/${lang}#experience`}>{labels.experience}</a></li>
    <li><a class="text-slate-300 hover:text-cyan-400 transition-colors" href={`/${lang}#skills`}>{labels.skills}</a></li>
    <li><a class="text-slate-300 hover:text-cyan-400 transition-colors" href={`/${lang}#portfolio`}>{labels.portfolio}</a></li>
    <li><a class="text-slate-300 hover:text-cyan-400 transition-colors" href={`/${lang}#social`}>{labels.social}</a></li>
    <li><a class="text-slate-300 hover:text-cyan-400 transition-colors" href={`/${lang}#blog`}>{labels.blog}</a></li>
  </ul>
  <div class="flex items-center gap-4">
    <a class="text-blue-400 hover:text-blue-300 transition-colors" href="https://github.com/crowcl52" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
      <iconify-icon icon="mdi:github" width="20" height="20"></iconify-icon>
    </a>
    <a class="text-blue-600 hover:text-blue-500 transition-colors" href="https://www.linkedin.com/in/eduardo-sanchez-457481b0/" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
      <iconify-icon icon="mdi:linkedin" width="20" height="20"></iconify-icon>
    </a>
    <a class="text-green-500 hover:text-green-400 transition-colors" href="https://wa.me/523324349525" aria-label="WhatsApp" target="_blank" rel="noopener noreferrer">
      <iconify-icon icon="mdi:whatsapp" width="20" height="20"></iconify-icon>
    </a>
    <a class="border border-cyan-400/30 px-3 py-1 rounded text-cyan-400 hover:bg-cyan-400/10 transition-colors font-mono text-sm" href={`/${alt}`}>{alt.toUpperCase()}</a>
  </div>
</nav>
