---
const { lang = "es", labels = {} } = Astro.props;
const tech = [
  { name: "React", icon: "devicon:react" },
  { name: "TypeScript", icon: "devicon:typescript" },
  { name: "Astro", icon: "simple-icons:astro" },
  { name: "Tailwind", icon: "devicon:tailwindcss" },
  { name: "React Native", icon: "simple-icons:react" }
];
---
<section class="py-16" id="tech">
  <div class="max-w-4xl mx-auto">
    <!-- Terminal Header -->
    <div class="bg-black/80 border border-cyan-400/30 rounded-t-lg p-3 mb-0">
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        <span class="ml-4 text-cyan-400 text-sm font-mono">eduardo@dev:~$ {labels.terminal?.commands?.lsSkills || "ls skills/"}</span>
      </div>
    </div>
    
    <!-- Terminal Content -->
    <div class="bg-black/90 border-x border-b border-cyan-400/30 p-8">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 font-mono">
        {tech.map((t, index) => (
          <div class="group border border-cyan-400/20 rounded p-3 bg-black/50 hover:border-cyan-300/50 transition-all hover:bg-cyan-500/10">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 grid place-items-center text-cyan-400">
                <iconify-icon icon={t.icon} width="20" height="20"></iconify-icon>
              </div>
              <div>
                <div class="text-cyan-400 font-medium text-sm">{t.name}</div>
                <div class="text-green-400 text-xs">{labels.tech?.productionReady || "production-ready"}</div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Terminal Footer -->
      <div class="mt-6 pt-4 border-t border-cyan-400/20">
        <p class="text-green-400 text-sm font-mono">
          <span class="text-cyan-400">$</span> {labels.terminal?.commands?.echoTotal?.replace('{count}', tech.length) || `echo "Total: ${tech.length} technologies mastered"`}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
@keyframes float{ 0%,100%{transform:translateY(0)} 50%{transform:translateY(-4px)} }
</style>
