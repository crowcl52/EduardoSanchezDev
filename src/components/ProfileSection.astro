---
// Componente de perfil inspirado en SofiDev
const { lang = "es", labels = {} } = Astro.props;
---

<section class="py-16" id="about">
  <div class="max-w-4xl mx-auto">
    <!-- Terminal Header -->
    <div class="bg-black/80 border border-cyan-400/30 rounded-t-lg p-3 mb-0">
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        <span class="ml-4 text-cyan-400 text-sm font-mono">eduardo@dev:~$ {labels.terminal?.commands?.catAbout || "cat about.txt"}</span>
      </div>
    </div>
    
    <!-- Terminal Content -->
    <div class="bg-black/90 border-x border-b border-cyan-400/30 p-8">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <!-- Avatar Section -->
        <div class="text-center">
          <div class="w-48 h-48 mx-auto mb-6 border-4 border-cyan-400/30 rounded-full overflow-hidden bg-gradient-to-br from-cyan-500/20 to-blue-500/20">
            <img src="/profile.jpeg" alt="Eduardo S√°nchez" class="w-full h-full object-cover" />
          </div>
          <div class="font-mono text-green-400 space-y-1">
            <p class="text-cyan-400">$ {labels.terminal?.commands?.whoami || "whoami"}</p>
            <p class="text-white text-xl font-bold">Eduardo S√°nchez</p>
            <p class="text-tron-cyan">Front-end Developer</p>
          </div>
        </div>
        
        <!-- About Text -->
        <div class="font-mono text-green-400 space-y-4">
          <p><span class="text-cyan-400">$</span> {labels.terminal?.commands?.echoAbout || "echo \"About Eduardo\""}</p>
          <div class="text-white space-y-3">
            <p>{labels.profile?.description || "JavaScript Fan üòç. Always looking for new skills to learn."}</p>
            
            <h3 class="text-cyan-400 font-bold">{labels.profile?.subtitle || "What sets me apart?"}</h3>
            <p>{labels.profile?.content || "I genuinely love what I do! üíô I thrive on transforming ideas into unique digital solutions. üí° My focus goes beyond coding‚Äîit's about creating experiences that captivate and solve real-world problems in innovative ways. üöÄ"}</p>
            
            <div class="mt-6 flex gap-4">
              <a href="#" class="bg-green-500/20 border border-green-400/50 px-4 py-2 rounded text-green-400 hover:bg-green-500/30 transition-colors text-sm">
                {labels.profile?.downloadCV || "Download CV"}
              </a>
              <a href="#contact" class="bg-cyan-500/20 border border-cyan-400/50 px-4 py-2 rounded text-cyan-400 hover:bg-cyan-500/30 transition-colors text-sm">
                {labels.profile?.contactMe || "Contact Me"}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
