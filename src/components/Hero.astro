<script is:raw>
  // Efecto Typewriter
  function typeWriter(element, text, speed = 50) {
    let i = 0;
    element.innerHTML = '';
    
    function type() {
      if (i < text.length) {
        element.innerHTML += text.charAt(i);
        i++;
        setTimeout(type, speed);
      } else {
        // Ocultar cursor cuando termine la escritura
        element.classList.add('typewriter-complete');
      }
    }
    
    type();
  }

  // Función para iniciar todos los typewriters
  function initTypewriters() {
    const titleElement = document.querySelector('.typewriter-title');
    const roleElement = document.querySelector('.typewriter-role');
    const taglineElement = document.querySelector('.typewriter-tagline');
    
    if (titleElement && roleElement && taglineElement) {
      // Obtener el idioma actual de la URL
      const currentLang = window.location.pathname.includes('/en') ? 'en' : 'es';
      
      // Obtener textos del DOM
      const titleElement = document.querySelector('.typewriter-title');
      const roleElement = document.querySelector('.typewriter-role');
      const taglineElement = document.querySelector('.typewriter-tagline');
      
      const currentTexts = {
        title: titleElement?.getAttribute('data-text') || '',
        role: roleElement?.getAttribute('data-text') || '',
        tagline: taglineElement?.getAttribute('data-text') || ''
      };
      
      // Iniciar typewriter del título
      typeWriter(titleElement, currentTexts.title, 80);
      
      // Iniciar typewriter del rol después del título
      setTimeout(() => {
        typeWriter(roleElement, currentTexts.role, 60);
      }, currentTexts.title.length * 80 + 500);
      
      // Iniciar typewriter del tagline después del rol
      setTimeout(() => {
        typeWriter(taglineElement, currentTexts.tagline, 30);
      }, currentTexts.title.length * 80 + currentTexts.role.length * 60 + 1000);
    }
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTypewriters);
  } else {
    initTypewriters();
  }
</script>

<style>
  /* Efecto Typewriter */
  .typewriter-title,
  .typewriter-role,
  .typewriter-tagline {
    min-height: 1.2em;
  }

  /* Cursor parpadeante para el efecto typewriter */
  .typewriter-title::after,
  .typewriter-role::after,
  .typewriter-tagline::after {
    content: '|';
    color: #06b6d4;
    animation: blink 1s infinite;
    font-weight: normal;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Ocultar cursor cuando termine la escritura */
  .typewriter-complete::after {
    display: none;
  }
</style>
